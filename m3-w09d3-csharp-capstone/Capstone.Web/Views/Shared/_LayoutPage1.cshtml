<!DOCTYPE html>

<html>
<header>
    <img src="~/Content/img/logo.png" alt ="National Park Geek logo" />
</header>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - National Park Geek</title>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body class="mw-80">

    <div class="navbar navbar-inverse mw-80">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("National Park Geek", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Survey", "Survey", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>

        @RenderBody()
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
</body>
</html>
