@{
    ViewBag.Title = "Survey Page";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using Capstone.Web.Models;
@model List<Survey>

<h2>Favorite Parks</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>

        @foreach (Survey item in Model)
        {
            string imageName = "../../Content/img/" + item.FavoriteParkCode +".jpg";

            <div class="list-group">
                <div class="list-group-item">
                        <img class="listImage" src="@imageName" alt="@item.ParkName" />
                </div>
            </div>
            <p>@item.ParkName</p>
            <p>@item.Rank</p>
        }
    </div>
</body>
</html>
