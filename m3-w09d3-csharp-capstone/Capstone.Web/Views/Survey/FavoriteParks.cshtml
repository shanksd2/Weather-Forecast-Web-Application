@{
    ViewBag.Title = "Survey Page";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using Capstone.Web.Models;
@model List<Survey>

<h1 style="text-align:center;">Favorite Parks</h1>
<br />
<br />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>

        @foreach (Survey item in Model)
    {
        string imageName = "../../Content/img/" + item.FavoriteParkCode + ".jpg";

        <div class="container">
            <div class="col-md-6">
                <img class="parkImages" src="@imageName" alt="@item.ParkName" />
            </div>

            <div class="col-md-6">
                <h2>@item.ParkName</h2>
                <h4>Number of Votes: @item.Rank</h4>

            </div>
        </div>
        <br /> <br />
}
    </div>
</body>
</html>
